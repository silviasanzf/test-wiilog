{% extends 'base.html.twig' %}

{% block title %}Edit Contact{% endblock %}

{% block body %}
    <div class="container general">
        <h1>Mettre à jour un contact</h1>
        {{ form_start(form) }}
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.civility, {'label': 'Monsieur ou Madame '}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.name, {'label': 'Prénom'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.firstName, {'label': 'Nom'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.mobilPhone, {'label': 'Numéro de portable'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.officePhone, {'label': 'Numéro de téléphone du bureau'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.email, {'label': 'Adresse email'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.roles, {'label': 'Fonction(s) dans l\'entreprise'}) }}
            </div>
        </div>
        <div class="row justify-content">
            <div class="col space-around">
                {{ form_row(form.company, {'label': 'Entreprise'}) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col space-around">
                <button class="btn btn-primary btn-block">{{ button_label|default('Mettre à jour') }}</button>
                <div class="col space-around">
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {{ include('contact/_delete_form.html.twig') }}
    <div class="container general">
        <a href="{{ path('contact_index') }}">Retour à la liste de contacts</a>
    </div>






{% endblock %}
