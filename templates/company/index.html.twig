{% extends 'base.html.twig' %}


{% block title %}Company index{% endblock %}

{% block body %}

    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Address3</th>
                <th>CodePost</th>
                <th>City</th>
                <th>Siret</th>
                <th>Phone</th>
                <th>Email</th>
                <th>French</th>
                <th>Actions</th>

        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.address1 }}</td>
                <td>{{ company.address2 }}</td>
                <td>{{ company.address3 }}</td>
                <td>{{ company.codePost }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.french ? 'Yes' : 'No' }}</td>


                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
